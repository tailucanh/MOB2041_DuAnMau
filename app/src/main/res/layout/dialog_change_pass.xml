<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp"
    android:background="@drawable/background_dialog_add_1"

    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mali"
        android:text="Tài khoản của bạn"
        android:textColor="@color/black"
        android:shadowColor="#939393"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:textSize="23dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="@font/mali"
            android:text="Tên tài khoản:"
            android:textColor="@color/gray"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/mali"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mali"
            android:text="Mật khẩu:"
            android:textColor="@color/gray"
            android:textSize="16dp" />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/tilPass"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          app:passwordToggleEnabled="true"
          app:passwordToggleTint="@color/gray_2"
          android:layout_marginBottom="10dp"
          >

          <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="38dp"
              android:background="@drawable/custom_edittext_change_pass"
              android:focusable="false"
              android:fontFamily="@font/acme"
              android:inputType="textPassword"
              android:paddingStart="5dp"
              android:textColor="#000000"
              android:textSize="20dp"/>
      </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mali"
            android:text="Mật khẩu mới:"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilChangePass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/gray_2"
            android:layout_marginBottom="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/custom_edittext_change_pass"
                android:fontFamily="@font/acme"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:textColor="#000000"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChange"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mali"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@drawable/custom_button_1"
        android:textColor="@color/black"/>

</LinearLayout>
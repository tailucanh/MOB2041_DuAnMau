<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:paddingBottom="5dp">
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swiper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mode="same_level"
        app:dragEdge="right"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgUpdate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_change"
            android:scaleType="centerInside"
            android:rotationY="180"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            />
        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:rotationY="180"
             android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutOneItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center|left"
        android:background="@drawable/custom_solid_one_items_1"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_one_item"
            android:rotationY="30"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"/>


        <TextView
            android:id="@+id/titleBook"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mali"
            android:paddingHorizontal="5dp"
            android:text="Tên loại sách"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>


</LinearLayout>